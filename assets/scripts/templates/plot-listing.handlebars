
{{#each plots as |plot|}}
  <section data-id="{{plot._id}}">
    <h6>Plant Name:</h6>
    <h3>
      {{plot.name}}
    </h3>
    <h6>Plant Type:</h6>
    <p>
      {{plot.plantType}}
    </p>
      <form class="plots-update">
        <input type="text" readonly class="form-control-plaintext" name="plot[id]" value="{{plot._id}}">
        <input type="text" required name="plot[name]" maxlength="30" placeholder="Plant Name">
        <input type="text" required name="plot[plantType]" maxlength="20" placeholder="Type of Plant">
        <br>
        <button type="submit" data-id="{{plot._id}}" class="btn btn-primary">Update</button>
      </form>
      <button data-id="{{plot._id}}" class="btn btn-danger">Remove</button>
    <hr>
  </section>
{{/each}}
