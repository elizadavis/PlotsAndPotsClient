
{{#each plants as |plant|}}
  {{log plant}}
  <section data-id="{{plant.id}}">
    <h6>Plant Name:</h6>
    <h3>
      {{plant.name}}
    </h3>
    <h6>Location:</h6>
    <p>
      {{plant.location}}
    </p>
    <h6>Plant Type:</h6>
    <p>
      {{plant.plant_type}}
    </p>
    {{#if plant.editable}}
      <form class="plants-update">
        <input type="number" readonly class="form-control-plaintext" name="plant[id]" value="{{plant.id}}">
        <input type="text" required name="plant[name]" maxlength="30" placeholder="Plant Name">
        <input type="text" required name="plant[location]" maxlength="4" placeholder="Plot/Pot">
        <input type="text" required name="plant[plant_type]" maxlength="20" placeholder="Type of Plant">
        <button type="submit" data-id="{{plant.id}}" class="btn btn-primary">Update</button>
      </form>
      <button data-id="{{plant.id}}" class="btn btn-danger">Remove</button>
    {{/if}}
    <hr>
  </section>
{{/each}}
